- var site = {title: 'R. Allan White | UX Designer', url: 'http://allanwhite.info', image: '/images/thumbnail-site-square.jpg', favicon: '/favicon.ico', description: 'I\'m a seasoned digital craftsman, with over 20 years of experience as a designer, web developer, UX practitioner, video producer, animator, and presenter. I\'m an intensely curious "expert generalist" who loves teaching and learning new skills.'}
- var profile = {first_name: 'Allan', last_name: 'White', username: 'allanwhite'}
