meta(charset='utf-8')
meta(name='viewport', content='width=device-width')
meta(description=site.description)
meta(name='twitter:card', content='summary_large_image')
meta(name='twitter:site', content='@allanwhite')
meta(name='twitter:creator', content='@allanwhite')
meta(name='twitter:title', content=site.title)
meta(name='twitter:description', content=site.description)
meta(name='twitter:image:src', content='/images/profile-desktop.jpg')


each val, key in site // Open Graph metadata
  meta(property='og:'+'#{key}', content='#{val}')
each val, key in profile
  meta(property='og:profile:'+'#{key}', content='#{val}')

title= site.title
link(rel='shortcut icon', href=site.favicon)

